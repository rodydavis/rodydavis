templ IndexStyles() {
	<style>
		.landing-main {
			max-width: 1200px;
			margin: 0 auto;
			padding: 2rem 1rem;
		}
		.overview-list {
			list-style: none;
			padding: 0;
			margin: 0 0 2rem 0;
			font-size: 1.1em;
		}
		.overview-list li {
			margin-bottom: 0.5em;
		}
		.landing-section {
			margin-bottom: 2.5rem;
		}
		.apps-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
			gap: 1.5rem;
			margin-top: 1rem;
		}
		.app-tile {
			background: var(--template-surface-dim-background);
			border-radius: 20px;
			overflow: hidden;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: flex-end;
			transition: transform 0.12s, box-shadow 0.12s;
			min-height: unset;
			height: auto;
			padding: 0.7rem 0.5rem 0.7rem 0.5rem;
			position: relative;
		}
		.app-tile a {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: flex-end;
			width: 100%;
			height: 100%;
			text-decoration: none;
		}
		.app-tile img {
			width: 80px;
			height: 80px;
			border-radius: 18px;
			object-fit: contain;
			background: #fff;
			box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
			margin-bottom: 0.7rem;
			margin-top: auto;
			display: block;
		}
		.app-info {
			width: 100%;
			text-align: center;
			margin-top: auto;
			margin-bottom: 0.2em;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: flex-end;
		}
		.app-info h3 {
			margin: 0.5rem 0 0 0;
			font-size: 1.08em;
			color: var(--app-footer-heading-color, var(--app-footer-text));
			width: 100%;
			text-align: center;
		}
		.landing-section h2,
		.overview h1 {
			margin-bottom: 1.2em;
		}
		.social-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
			gap: 1.2rem;
			margin-top: 1rem;
		}
		.social-tile {
			background: var(--template-surface-dim-background);
			border-radius: 16px;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: flex-end;
			padding: 0.7rem 0.5rem 0.7rem 0.5rem;
			min-height: unset;
			height: auto;
			text-decoration: none;
			color: var(--app-footer-link-text, #555);
			transition: transform 0.12s, box-shadow 0.12s, background 0.12s;
		}
		.social-tile:hover {
			transform: translateY(-3px) scale(1.04);
			box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
			background: var(--app-footer-link-hover-text, #f0f0f0);
		}
		.social-tile img,
		.social-tile svg {
			width: 38px;
			height: 38px;
			margin-bottom: 0.5rem;
			margin-top: auto;
			display: block;
		}
		.social-tile span {
			font-size: 1em;
			margin-top: 0.2em;
			text-align: center;
			color: var(--app-footer-heading-color, var(--app-footer-text));
		}
		.tags-list {
			display: flex;
			flex-wrap: wrap;
			gap: 0.5em 0.7em;
			margin-bottom: 1em;
		}
		.tags-list tag-item {
			margin: 0.2em 0.3em;
		}
		@media (max-width: 768px) {
			.posts-list,
			.apps-list {
				flex-direction: column;
				gap: 1rem;
			}
			.app-card {
				width: 100%;
				height: auto;
				min-height: 120px;
			}
			.apps-grid {
				grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
				gap: 1rem;
			}
			.app-tile {
				min-height: unset;
				height: auto;
				padding: 0.5rem 0.2rem 0.5rem 0.2rem;
			}
			.app-tile img {
				width: 60px;
				height: 60px;
			}
			.social-grid {
				grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
				gap: 0.7rem;
			}
			.social-tile {
				min-height: unset;
				height: auto;
				padding: 0.5rem 0.2rem 0.5rem 0.2rem;
			}
			.social-tile img,
			.social-tile svg {
				width: 28px;
				height: 28px;
			}
		}
	</style>
}
