---
import HeaderLink from "./HeaderLink.astro";
import { getConfig } from "../consts.js";
const { site, menu } = getConfig();
const { title } = site;
---

<header>
  <h2>
    <a href="/">{title}</a>
  </h2>
  <nav>
    {
      menu.map(({ name, link, icon }) => (
        <HeaderLink href={link} icon={icon}>
          {" "}
          {name}
        </HeaderLink>
      ))
    }
  </nav>
</header>
<style>
  header {
    flex-direction: column;
    align-items: flex-start;
    background-color: var(--header-background);
    color: var(--header-color);
    padding: 1em;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid var(--border-color);
  }
  h2 {
    margin: 0;
  }
  h2 a {
    color: inherit;
    text-decoration: none;
  }
  h2 a:hover {
    text-decoration: underline;
  }
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1em;
  }
  @media (min-width: 720px) {
    header {
      flex-direction: row;
      align-items: center;
    }
  }
</style>
